---
const year = new Date().getFullYear();

const footerSections = [
  {
    title: 'Products',
    links: [
      { label: 'AI Pipeline API', href: '/products#pipeline' },
      { label: 'Data Transform API', href: '/products#transform' },
      { label: 'Web3 Bridge API', href: '/products#web3' },
      { label: 'All Products', href: '/products' },
    ]
  },
  {
    title: 'Developers',
    links: [
      { label: 'Documentation', href: '/docs' },
      { label: 'API Reference', href: 'https://api.ok-robot.co/docs' },
      { label: 'Status', href: 'https://status.ok-robot.co' },
    ]
  },
  {
    title: 'Company',
    links: [
      { label: 'About', href: '/about' },
      { label: 'Contact', href: '/contact' },
    ]
  },
];
---

<footer class="border-t border-border/50 bg-midnight/80 mt-32">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-10">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <div class="w-7 h-7 rounded-md bg-accent/10 border border-accent/30 flex items-center justify-center">
            <span class="text-accent font-bold text-xs font-[family-name:var(--font-mono)]">OK</span>
          </div>
          <span class="font-[family-name:var(--font-display)] font-bold text-sm text-text-primary">OK ROBOT</span>
        </a>
        <p class="text-text-muted text-sm leading-relaxed mb-4">
          AI-powered API products for the modern web.
        </p>
        <a href="mailto:teck@ok-robot.co" class="text-sm text-accent hover:text-accent-dim transition-colors">
          teck@ok-robot.co
        </a>
      </div>

      <!-- Link Sections -->
      {footerSections.map(section => (
        <div>
          <h4 class="font-[family-name:var(--font-display)] font-semibold text-sm text-text-primary mb-4">
            {section.title}
          </h4>
          <ul class="space-y-2.5">
            {section.links.map(link => (
              <li>
                <a href={link.href} class="text-sm text-text-muted hover:text-text-secondary transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom bar -->
    <div class="mt-14 pt-6 border-t border-border/30 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-xs text-text-muted">
        &copy; {year} OK ROBOT. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <!-- GitHub -->
        <a href="https://github.com/ok-robot" class="text-text-muted hover:text-text-secondary transition-colors" aria-label="GitHub">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
        </a>
        <!-- Twitter/X -->
        <a href="https://x.com/okrobot" class="text-text-muted hover:text-text-secondary transition-colors" aria-label="X">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <!-- LinkedIn -->
        <a href="https://linkedin.com/company/ok-robot" class="text-text-muted hover:text-text-secondary transition-colors" aria-label="LinkedIn">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
      </div>
    </div>
  </div>
</footer>
