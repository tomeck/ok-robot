<section class="py-24">
  <div class="max-w-7xl mx-auto px-6">
    <div class="relative rounded-3xl border border-accent/20 bg-gradient-to-br from-accent/10 via-deep to-deep overflow-hidden p-12 md:p-16 text-center">
      {/* Decorative elements */}
      <div class="absolute top-0 right-0 w-64 h-64 bg-accent/10 rounded-full blur-[80px]"></div>
      <div class="absolute bottom-0 left-0 w-48 h-48 bg-blue-500/10 rounded-full blur-[60px]"></div>

      <div class="relative z-10 max-w-2xl mx-auto">
        <h2 class="font-[family-name:var(--font-display)] text-3xl md:text-4xl font-bold tracking-tight mb-4">
          Ready to build something great?
        </h2>
        <p class="text-text-secondary text-lg mb-8">
          Get your free API key and start making requests in under 2 minutes.
          No credit card, no commitment.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://dashboard.ok-robot.co"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-accent text-midnight font-semibold rounded-xl hover:bg-accent-dim transition-all shadow-lg shadow-accent/20 text-base"
          >
            Get Your API Key
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="mailto:teck@ok-robot.co"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 border border-border-light text-text-primary rounded-xl hover:bg-surface/50 transition-all text-base"
          >
            Talk to Us
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
