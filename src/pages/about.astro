---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';

const values = [
  {
    title: 'Developer-first',
    desc: 'Every decision — from API design to documentation — is made with the developer experience as the top priority.',
  },
  {
    title: 'Reliability as a feature',
    desc: 'We treat uptime and latency as product features, not afterthoughts. Our infrastructure is built for 99.9%+ availability.',
  },
  {
    title: 'Transparent by default',
    desc: 'Clear pricing, honest status pages, public changelogs. We believe trust is built through transparency.',
  },
  {
    title: 'AI pragmatism',
    desc: 'We use AI where it adds real value and traditional engineering where it doesn\'t. No AI hype for hype\'s sake.',
  },
];
---

<Layout title="About" description="Learn about OK ROBOT and our mission to build intelligent API infrastructure.">
  <Nav />
  <main class="pt-24">
    <section class="max-w-7xl mx-auto px-6 py-16">
      <div class="max-w-3xl">
        <span class="text-xs font-semibold tracking-widest uppercase text-accent mb-3 block">About</span>
        <h1 class="font-[family-name:var(--font-display)] text-4xl md:text-5xl font-bold tracking-tight mb-6">
          Building the API layer for the AI era
        </h1>
        <div class="space-y-4 text-text-secondary text-lg leading-relaxed">
          <p>
            OK ROBOT builds API products at the intersection of artificial intelligence and Web3 infrastructure.
            We believe the next generation of applications will be built on intelligent, composable API services
            that abstract away complexity and let developers focus on their core product.
          </p>
          <p>
            Our APIs are designed to be the building blocks that teams reach for when they need AI orchestration,
            data transformation, or multi-chain blockchain access — without the overhead of building and maintaining
            these systems in-house.
          </p>
          <p>
            We're a small, focused team that ships fast and iterates based on what developers actually need.
            Every API we build starts with a real pain point we've experienced ourselves.
          </p>
        </div>
      </div>
    </section>

    {/* Values */}
    <section class="border-t border-border/30 py-20">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="font-[family-name:var(--font-display)] text-2xl font-bold tracking-tight mb-12">What we believe</h2>
        <div class="grid md:grid-cols-2 gap-8">
          {values.map(v => (
            <div class="rounded-xl border border-border/50 bg-deep/40 p-8">
              <h3 class="font-[family-name:var(--font-display)] font-bold text-lg mb-2">{v.title}</h3>
              <p class="text-text-secondary text-sm leading-relaxed">{v.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Contact info */}
    <section class="border-t border-border/30 py-20">
      <div class="max-w-7xl mx-auto px-6">
        <h2 class="font-[family-name:var(--font-display)] text-2xl font-bold tracking-tight mb-6">Get in touch</h2>
        <p class="text-text-secondary mb-8 max-w-xl">
          Whether you're interested in our products, have a partnership idea, or just want to chat about
          AI and Web3 infrastructure — we'd love to hear from you.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="mailto:teck@ok-robot.co" class="inline-flex items-center gap-2 px-5 py-3 rounded-xl border border-accent/30 bg-accent/5 text-accent text-sm font-medium hover:bg-accent/10 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            teck@ok-robot.co
          </a>
          <a href="https://github.com/ok-robot" class="inline-flex items-center gap-2 px-5 py-3 rounded-xl border border-border-light text-text-secondary text-sm font-medium hover:bg-surface/30 transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
            GitHub
          </a>
          <a href="https://x.com/okrobot" class="inline-flex items-center gap-2 px-5 py-3 rounded-xl border border-border-light text-text-secondary text-sm font-medium hover:bg-surface/30 transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            @okrobot
          </a>
        </div>
      </div>
    </section>

    <CTA />
  </main>
  <Footer />
</Layout>
