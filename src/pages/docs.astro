      { label: 'Authentication', href: '#', time: '3 min' },
      { label: 'SDKs & Libraries', href: '#', time: '2 min' },
      { label: 'Rate Limits & Errors', href: '#', time: '4 min' },
    ],
  },
  {
    title: 'AI Pipeline API',
    icon: 'âš¡',
    links: [
      { label: 'Pipeline Basics', href: '#', time: '8 min' },
      { label: 'Step Types', href: '#', time: '10 min' },
      { label: 'Fallbacks & Retries', href: '#', time: '6 min' },
      { label: 'Observability', href: '#', time: '5 min' },
    ],
  },
  {
    title: 'Data Transform API',
    icon: 'ðŸ”„',
    links: [
      { label: 'Transform Basics', href: '#', time: '6 min' },
      { label: 'Schema Definition', href: '#', time: '8 min' },
      { label: 'Batch Processing', href: '#', time: '5 min' },
      { label: 'Supported Formats', href: '#', time: '3 min' },
    ],
  },
  {
    title: 'Web3 Bridge API',
